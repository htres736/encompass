<div id='admin-workspace-filter'>
  <div class='choose-filter-admin'>
    <span class='filter-text'>Find Workspaces by</span>
    <SelectizeInput
      @inputId='admin-filter-select'
      @initialOptions={{@mainOptions}}
      @initialItems={{this.initialMainFilterItem}}
      @onItemAdd={{this.setMainSelection}}
      @maxItems={{1}}
      @labelField='label'
      @valueField='value'
    />
  </div>

  {{#if this.showOrgFilter}}
    <div class='filter-admin'>
      <SelectizeInput
        @inputId='all-org-filter'
        @initialOptions={{@orgOptions}}
        @onItemAdd={{this.updateMultiSelect}}
        @onItemRemove={{this.updateMultiSelect}}
        @maxItems={{3}}
        @labelField='name'
        @valueField='id'
        @searchField='name'
        @propToUpdate='dropdownSelections'
        @placeholder='Organization name...'
      />
    </div>
    {{#if this.hasCurrentSelections}}
      <ul class='secondary-filter-options'>
        {{#each this.selectionBasedSubOptions as |option|}}
          <li
            class='checkbox-content
              {{if
                (is-in this.subFilterSelections option.value)
                "is-selected"
              }}'
          >
            <label for={{option.value}} class='checkbox-label'>
              <i class='checkbox-icon {{option.icon}}'></i>
              <span class='checkbox-text'>{{option.label}}</span>
              <Input
                id={{option.value}}
                @type='checkbox'
                @checked={{(is-in this.subFilterSelections option.value)}}
                {{on 'change' this.updateSelectionBasedSubFilters}}
              />
            </label>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  {{/if}}

  {{#if this.showUserFilter}}
    <div class='filter-admin'>
      <SelectizeInput
        @inputId='all-user-filter'
        @onItemAdd={{this.updateMultiSelect}}
        @onItemRemove={{this.updateMultiSelect}}
        @maxItems={{3}}
        @labelField='username'
        @valueField='id'
        @searchField='username'
        @model='user'
        @queryParamsKey='usernameSearch'
        @propToUpdate='dropdownSelections'
        @propName={{this.mainSelection}}
        @isAsync={{true}}
        @placeholder='Username...'
      />
    </div>
  {{/if}}
  {{#if this.showPowsFilter}}
    <ul class='secondary-filter-options'>
      {{#each this.generalSubOptions as |option|}}
        <li
          class='checkbox-content
            {{option.value}}
            {{if (is-in this.subFilterSelections option.value) "is-selected"}}'
        >
          <label for={{option.value}} class='checkbox-label'>
            <i class='checkbox-icon {{option.icon}}'></i>
            <span class='checkbox-text'>{{option.label}}</span>
            <Input
              id={{option.value}}
              @type='checkbox'
              @checked={{(is-in this.subFilterSelections option.value)}}
              {{on 'change' this.updateGeneralSubFilters}}
            />
          </label>
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>