<div id='admin-workspace-filter'>
  <div class='choose-filter-admin'>
    <span class='filter-text'>Find Workspaces by</span>
    <SelectizeInput
      @inputId='admin-filter-select'
      @initialOptions={{@mainOptions}}
      @initialItems={{this.initialMainFilterItems}}
      @onItemAdd={{this.setMainFilter}}
      @maxItems={{1}}
      @labelField='label'
      @valueField='value'
    />
  </div>

  {{#if this.showOrgFilter}}
    <div class='filter-admin'>
      <SelectizeInput
        @inputId='all-org-filter'
        @initialOptions={{@orgOptions}}
        @onItemAdd={{fn this.updateMultiSelect 'selectedOrgSubFilters'}}
        @onItemRemove={{fn this.updateMultiSelect 'selectedOrgSubFilters'}}
        @maxItems={{3}}
        @labelField='name'
        @valueField='id'
        @searchField='name'
        @propToUpdate='selectedValues'
        @placeholder='Organization name...'
      />
    </div>

    {{#if this.areCurrentSelections}}
      <ul class='secondary-filter-options'>
        {{#each this.orgFilterSubOptions as |option|}}
          <li
            class='checkbox-content
              {{if
                (fn this.isIncludedInSubFilters option.value)
                "is-selected"
              }}'
          >
            <label for={{option.value}} class='checkbox-label'>
              <i class='checkbox-icon {{option.icon}}'></i>
              <span class='checkbox-text'>{{option.label}}</span>
              <Input
                id={{option.value}}
                @type='checkbox'
                @checked={{option.isApplied}}
                {{on 'change' this.updateOrgSubFilters}}
              />
            </label>
          </li>
        {{/each}}
      </ul>
    {{/if}}
  {{/if}}

  {{#if this.showUserFilter}}
    <div class='filter-admin'>
      <SelectizeInput
        @inputId='all-user-filter'
        @onItemAdd={{fn this.updateMultiSelect 'selectedValues'}}
        @onItemRemove={{fn this.updateMultiSelect 'selectedValues'}}
        @maxItems={{3}}
        @labelField='username'
        @valueField='id'
        @searchField='username'
        @model='user'
        @queryParamsKey='usernameSearch'
        @propToUpdate='selectedValues'
        @propName={{this.mainFilter}}
        @isAsync={{true}}
        @placeholder='Username...'
      />
    </div>
  {{/if}}
</div>