<div
  {{action 'toSubmissionResponse'}}
  class='item-container {{if this.thread.hasUnreadReply "has-unread-reply"}}'
  id='container'
>
  {{#if this.showStudent}}
    <div class='item-section student'>
      {{this.thread.studentDisplay}}
    </div>
  {{/if}}
  <div class='item-section workspace'>
    <span>{{this.thread.workspaceName}}</span>
  </div>
  <div class='item-section submission-date'>
    <span>{{this.format-date
        this.thread.latestRevision.createDate
        'L'
        true
      }}</span>
  </div>
  <div class='item-section problem'>
    {{this.thread.problemTitle}}
  </div>
  {{#if this.showMentor}}
    <div class='item-section mentor'>
      {{#each this.thread.mentors as |mentor|}}
        <span>{{this.mentor.displayName}}</span>
      {{/each}}
    </div>
  {{/if}}
  <div class='item-section reply-date'>
    <span>
      {{#if this.thread.latestReply}}
        {{format-date this.thread.latestReply.createDate 'L' true}}
      {{else}}
        N/A
      {{/if}}
    </span>
  </div>
  <div title={{this.displayStatusText}} class='item-section status'>
    <svg height='20' width='20'>
      <circle
        cx='10'
        cy='15'
        r='5'
        fill={{this.displayStatus.statusFill}}
      ></circle>
    </svg>
    <span class='status-text'>{{this.displayStatusText}}</span>
    {{#if this.thread.newNtfCount}}
      <i title={{ntfTitleText}} class='far fa-bell'></i>
    {{/if}}
  </div>
</div>

<script>
  $('.item-container').click(function (e) { $('.click-menu').addClass('hidden');
  }); $('.flex-item-full').click(function (e) {
  $('.click-menu').addClass('hidden'); });
</script>