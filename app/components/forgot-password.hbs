<div class='forgot-page'>
  <div class='forgot-box'>
    <img
      src='../assets/images/logo-encompass.png'
      class='encompass-logo'
      alt='encompass logo'
    />
    <p class='info'>Please provide your email address or username associated
      with your EnCoMPass account</p>
    <form class='form-forgot'>
      <div class='auth-form-input'>
        <label for='email'>Email Address</label>
        <Input
          class='form-control'
          id='email'
          @value={{this.email}}
          {{on 'keydown' (action 'resetMessages')}}
        />

        {{#if this.isEmailInvalid}}
          <p class='error-message'>Invalid email address</p>
        {{/if}}
      </div>
      <p class='or'>or</p>
      <div class='auth-form-input'>
        <label for='username'>Username</label>
        <Input
          class='form-control'
          id='username'
          @value={{this.username}}
          {{on 'keydown' (action 'resetMessages')}}
        />

        {{#if this.forgotPasswordErr}}
          <p class='error-message'>{{this.forgotPasswordErr}}</p>
        {{/if}}
        {{#each this.postErrors as |error|}}
          <p class='error-message'>{{error}}</p>
        {{/each}}
        {{#if this.missingRequiredFields}}
          <p class='error-message'>Missing Required Fields</p>
        {{/if}}
        {{#if this.tooMuchData}}
          <p class='error-message'>Please provide only one of username or
            password.</p>
        {{/if}}
        {{#if this.resetEmailSent}}
          <p class='success-message'>An email with further instructions has been
            sent to the email address on file.</p>
        {{/if}}
      </div>

      <button
        id='request-reset-link'
        class='auth-button'
        type='button'
        {{action 'handleRequest'}}
      >Request Reset Link</button>

    </form>
    <p class='login-link'>
      <LinkTo @route='auth.login' @classNames='login-link'>Back to Login</LinkTo>
    </p>

  </div>
</div>