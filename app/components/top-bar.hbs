{{#if this.user.isAuthenticated}}
  <div class='hamburger'>
    <MdcListItemGraphicIcon
      @icon='menu'
      {{action 'toggleDrawer'}}
      {{mdc-ripple}}
    />
  </div>
  <LinkTo @route='index'>
    <img
      src='../assets/images/logo-encompass.gif'
      alt='Encompass logo'
      class='encompass-logo'
    />
  </LinkTo>
  <ul class='al_nav menu-toggle' id='main-nav'>
    {{#unless this.isStudentAccount}}
      {{! role: admin, teacher, student etc. }}
      <li id='role-toggle'>
        <span class='toggle-role' {{action 'showToggleModal'}}>
          <span class='menuButton'>Switch Role:
            <span class='acting-role'>{{this.user.actingRoleName}}
              <i class='fas fa-sync-alt'></i></span>
          </span>
        </span>
      </li>
      {{! username }}
      <li id='current-username'>
        <LinkTo @route='users.user' @model={{this.currentUser.id}}>
          <span class='menuButton'>{{this.currentUser.username}}
            <i class='fas fa-user-circle'></i></span>
        </LinkTo>
      </li>
    {{/unless}}
    {{#if this.isStudentAccount}}
      <li id='current-username'>
        <span class='menuButton'>{{this.currentUser.username}}
          <i class='fas fa-user-circle'></i></span>
      </li>
    {{/if}}

    {{! logout button }}
    <li class='menu-items' id='logout-btn'>
      <LinkTo @route='logout' class='menu'>
        <span class='menuButton'>Log out</span>
      </LinkTo>
    </li>
  </ul>
  {{! material hamburger menu }}
  <div class='hamburger-menu'>
    <MdcDrawer @style='modal' @open={{this.open}}>
      <MdcDrawerContent>
        <MdcList>
          <MdcListItemLinkTo
            @route='index'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='home' />
            Home
          </MdcListItemLinkTo>
          <MdcListItemLinkTo
            @route='assignments'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='assignment' />
            Assignments
          </MdcListItemLinkTo>
          <MdcListItemLinkTo
            @route='sections'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='school' />
            Classes
          </MdcListItemLinkTo>
          <MdcListItemLinkTo
            @route='workspaces'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='group_work' />
            Workspaces
          </MdcListItemLinkTo>
          <MdcListItemLinkTo
            @route='problems'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='extension' />
            Problems
          </MdcListItemLinkTo>
          <MdcListItemLinkTo
            @route='responses'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='rate_review' />
            Feedback
          </MdcListItemLinkTo>
          {{#unless this.currentUser.isStudent}}
            <MdcListItemLinkTo
              @route='users'
              {{action 'toggleDrawer'}}
              {{mdc-ripple}}
            >
              <MdcListItemGraphicIcon @icon='people' />
              Users
            </MdcListItemLinkTo>
          {{/unless}}
          <MdcListItemLinkTo
            @route='logout'
            {{action 'toggleDrawer'}}
            {{mdc-ripple}}
          >
            <MdcListItemGraphicIcon @icon='power_settings_new' />
            Log out
          </MdcListItemLinkTo>
        </MdcList>
      </MdcDrawerContent>
    </MdcDrawer>
  </div>
{{else}}
  <LinkTo @route='index'>
    <img
      src='../assets/images/logo-encompass.gif'
      alt='Encompass logo'
      class='encompass-logo'
    />
  </LinkTo>
  {{! navbar when user logout }}
  <ul id='topbar-unauth'>
    <li data-test='login'>
      <LinkTo @route='auth.login' class='menu login hidden'>
        <span class='menuButton'>Log in</span>
      </LinkTo>
    </li>
    <li data-test='signup'>
      <LinkTo @route='auth.signup' classNames='menu signup'>
        <span class='menuButton'>Sign Up</span>
      </LinkTo>
    </li>
  </ul>

{{/if}}