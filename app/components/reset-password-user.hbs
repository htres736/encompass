<div id='reset-password-user'>
  <div class='reset-user-box'>
    {{#if this.resetSuccess}}
      <p class='success-message'>Password reset successfully!</p>
    {{/if}}
    <form class='form-reset-user'>
      <div class='auth-form-input'>
        <label for='password'>Password</label>
        <Input
          class='form-control'
          name='password'
          required={{true}}
          id='password'
          @type={{this.fieldType}}
          @value={{this.password}}
          {{on 'input' this.resetErrors}}
        />
        <button
          id='show-password-btn'
          type='button'
          {{action 'toggleShowingPassword'}}
        >
          {{#if this.showingPassword}}
            <i class='fas fa-eye-slash'></i>
          {{else}}
            <i class='fas fa-eye'></i>
          {{/if}}
        </button>
      </div>
      <div class='auth-form-input'>
        <label for='confirmPassword'>Confirm Password</label>
        <Input
          class='form-control'
          name='confirmPassword'
          required={{true}}
          id='confirmPassword'
          @type={{this.fieldType}}
          @value={{this.confirmPassword}}
          {{on 'input' this.resetErrors}}
        />
      </div>
      {{#if this.matchError}}
        <p class='error-message'>Passwords don't match.</p>
      {{/if}}
      {{#if this.missingRequiredFields}}
        <p class='error-message'>Please fill in all required fields.</p>
      {{/if}}
      <div class='button-row'>
        <button
          class='action_button'
          type='submit'
          {{action 'resetPassword'}}
        >Reset</button>
        <button
          class='action_button cancel-button'
          type='submit'
          {{action 'cancelReset'}}
        >Cancel</button>
      </div>

    </form>
    {{#if this.resetError}}
      {{this.resetError}}
    {{/if}}
    {{#each this.postErrors as |error|}}
      <p class='error-message'>{{error}}</p>
    {{/each}}

  </div>
</div>