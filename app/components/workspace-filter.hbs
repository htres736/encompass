<div id='workspace-filter'>
  <div class='filter-items'>
    <h2>Filter Options</h2>
    <h3>Primary Filters</h3>
    <ul class='primary-filter-list'>
      {{#each @mainOptions as |input|}}
        <li class='filter-{{input.value}}'>
          <RadioFilter
            @groupValue={{@mainSelection}}
            @isChecked={{(is-equal @mainSelection.value input.value)}}
            @groupName='top-level'
            @inputValue={{input}}
            @onClick={{this.updateTopLevel}}
            @labelName={{input.label}}
            @labelIcon={{input.icon}}
          />
          {{#if (is-equal @mainSelection.value input.value)}}
            {{#if this.showAdminFilters}}
              {{yield to='adminFilter'}}
            {{else}}
              <ul class='secondary-filter-options'>
                {{#each @subOptions as |option|}}
                  <li
                    class='checkbox-content
                      {{if (is-in @subSelections option.value) "is-selected"}}'
                  >
                    <label for={{option.value}} class='checkbox-label'>
                      <i class='checkbox-icon {{option.icon}}'></i>
                      <span class='checkbox-text'>{{option.label}}</span>
                      <Input
                        @type='checkbox'
                        @checked={{(is-in @subSelections option.value)}}
                        id={{option.value}}
                        {{on 'change' (fn this.toggleSubOption option)}}
                      />
                    </label>
                  </li>
                {{/each}}
              </ul>
            {{/if}}
          {{/if}}
        </li>
      {{/each}}
    </ul>
    <h3
      class='more-header {{if this.closedMenu "closed"}}'
      {{on 'click' this.toggleMoreFilters}}
    >
      <i
        class='fas
          {{if this.showMoreFilters "fa-chevron-down" "fa-chevron-right"}}'
      ></i>
      More
    </h3>
    {{#if this.showMoreFilters}}
      <ul class='more-filter-list'>
        <h5>Hidden Workspaces</h5>
        <label class='subfilter'>
          <Input
            id='toggle-hidden'
            @type='checkbox'
            @checked={{@showHidden}}
            @onChange={{this.toggleHiddenWorkspaces}}
          />
          <span>Show All Hidden Workspaces</span>
        </label>
        {{#if this.userIsAdmin}}
          <h5>Trashed Workspaces</h5>
          <label class='subfilter'>
            <input
              id='toggle-trashed'
              type='checkbox'
              checked={{@showTrashed}}
              {{on 'change' this.toggleTrashedWorkspaces}}
            />
            <span>Show All Trashed Workspaces</span>
          </label>
        {{/if}}
      </ul>
    {{/if}}
  </div>
</div>